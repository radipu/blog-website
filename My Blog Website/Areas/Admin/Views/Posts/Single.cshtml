        <!--Copy link-->
        <script>
            function copyToClipboard(text) {
                navigator.clipboard.writeText(text).then(function() {
                    alert('Link copied to clipboard!');
                }, function(err) {
                    alert('Failed to copy link: ' + err);
                });
            }
        </script>

        <!--Post Reactions no page reload-->
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.react-link').on('click', function (e) {
                    e.preventDefault();
                    const $button = $(this);
        
                    $.ajax({
                        url: '@Url.Action("PostReact", "Posts")',
                        data: {
                            postId: $button.data('post-id'),
                            reactionType: $button.data('reaction-type')
                        },
                        success: (data) => {
                            // Update ALL reaction counts
                            $('.react-link').each(function () {
                                const type = $(this).data('reaction-type');
                                $(this).find('.badge').text(data.reactionCounts[type]);
                            });
                        },
                        error: (xhr) => {
                            console.error('Error:', xhr.responseText);
                        }
                    });
                });
            });
        </script>

        <!--Comment Reply-->
        <script>
            function showReplyForm(commentId) {
                var form = document.getElementById('reply-form-' + commentId);
                if (form) {
                    form.style.display = (form.style.display === 'none' || form.style.display === '') ? 'block' : 'none';
                }
            }
        </script>

        <!--Comment/reply reaction no page reload-->
        <script>
            $(document).ready(function () {
                $('.react-link, .comment-react-link').on('click', function (e) {
                    e.preventDefault();
                    const $button = $(this);
                    const postId = $button.data('post-id');
                    const commentId = $button.data('comment-id');
                    const reactionType = $button.data('reaction-type');

                    let url;
                    let data = { reactionType: reactionType };

                    if (postId) {
                        url = '@Url.Action("PostReact", "Posts")';
                        data.postId = postId;
                    } else if (commentId) {
                        url = '@Url.Action("React", "Posts")';
                        data.commentId = commentId;
                    } else {
                        return;
                    }

                    $.ajax({
                        url: url,
                        data: data,
                        success: (data) => {
                            if (postId) {
                                // Update all post reaction counts
                                $('.react-link[data-post-id="' + postId + '"]').each(function () {
                                    const type = $(this).data('reaction-type');
                                    $(this).find('.badge').text(data.reactionCounts[type]);
                                });
                            } else if (commentId) {
                                // Update all comment/reply reaction counts for this commentId
                                $('.comment-react-link[data-comment-id="' + commentId + '"]').each(function () {
                                    const type = $(this).data('reaction-type');
                                    $(this).find('.badge').text(data.reactionCounts[type]);
                                });
                            }
                        },
                        error: (xhr) => {
                            console.error('Error:', xhr.responseText);
                        }
                    });
                });
            });
        </script>

        <!--text-to-speech-->
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                if (!('speechSynthesis' in window)) {
                    alert('Text-to-speech is not supported in your browser');
                    return;
                }

                const synth = window.speechSynthesis;
                let utterance = null;
                let isPlaying = false;
                let isPaused = false;
                let defaultVoice = null;

                // DOM elements
                const playPauseBtn = document.getElementById('playPauseBtn');
                const stopBtn = document.getElementById('stopBtn');
                const voiceSelect = document.getElementById('voiceSelect');
                const rateControl = document.getElementById('rateControl');
                const rateValue = document.getElementById('rateValue');
                const postContentEl = document.getElementById('post-content');

                // Voice setup: populate dropdown with all voices and set a default if available.
                function populateVoices() {
                    const voices = synth.getVoices();
                    voiceSelect.innerHTML = '<option value="">Default Voice (Auto-detect)</option>';

                    // Find Microsoft Zira for English if available
                    const ziraVoice = voices.find(voice =>
                        voice.name.toLowerCase().includes('zira') &&
                        voice.lang === 'en-US'
                    );
                    defaultVoice = ziraVoice || null;

                    voices.forEach(voice => {
                        const option = document.createElement('option');
                        option.value = voice.name;
                        option.textContent = `${voice.name} (${voice.lang})`;

                        if (ziraVoice && voice.name === ziraVoice.name) {
                            option.selected = true;
                        }

                        voiceSelect.appendChild(option);
                    });
                }

                // Initialize voices with retry in case voices are not yet loaded
                function initVoices() {
                    if (synth.getVoices().length > 0) {
                        populateVoices();
                    } else {
                        synth.onvoiceschanged = populateVoices;
                        setTimeout(populateVoices, 1000);
                    }
                }
                initVoices();

                // Event handlers
                playPauseBtn.addEventListener('click', () => {
                    if (!isPlaying && !isPaused) {
                        startSpeech();
                    } else if (isPaused) {
                        resumeSpeech();
                    } else {
                        pauseSpeech();
                    }
                });

                stopBtn.addEventListener('click', stopSpeech);

                rateControl.addEventListener('input', (e) => {
                    const value = parseFloat(e.target.value);
                    rateValue.textContent = `${value}x`;
                    if (utterance) {
                        utterance.rate = value;
                    }
                });

                // When starting speech, get the current text and language so that any translation changes are included.
                function startSpeech() {
                    if (synth.speaking) {
                        synth.cancel();
                    }
                    // Get updated content from the DOM element
                    const postContent = postContentEl.innerText || postContentEl.textContent;

                    // Detect language: try the post element's lang attribute, or document's, or fallback to English.
                    const detectedLang = postContentEl.getAttribute('lang') || document.documentElement.lang || 'en-US';

                    utterance = new SpeechSynthesisUtterance(postContent);
                    // Set the language of the utterance so that TTS uses correct pronunciation.
                    utterance.lang = detectedLang;

                    // Determine voice:
                    // If the user has manually selected a voice, use that.
                    // Otherwise, try to find a voice that supports the detected language.
                    let selectedVoice;
                    if (voiceSelect.value) {
                        selectedVoice = synth.getVoices().find(v => v.name === voiceSelect.value);
                    } else {
                        selectedVoice = synth.getVoices().find(voice => 
                            voice.lang.toLowerCase().startsWith(detectedLang.toLowerCase())
                        );
                        // Fallback to defaultVoice if no matching voice is found.
                        if (!selectedVoice) {
                            selectedVoice = defaultVoice;
                        }
                    }
                    if (selectedVoice) {
                        utterance.voice = selectedVoice;
                    }

                    utterance.rate = parseFloat(rateControl.value);
                    utterance.pitch = 1;

                    utterance.onend = () => {
                        isPlaying = false;
                        isPaused = false;
                        updateButtonState();
                    };

                    utterance.onpause = () => {
                        isPlaying = false;
                        isPaused = true;
                        updateButtonState();
                    };

                    utterance.onresume = () => {
                        isPlaying = true;
                        isPaused = false;
                        updateButtonState();
                    };

                    synth.speak(utterance);
                    isPlaying = true;
                    isPaused = false;
                    updateButtonState();
                }

                function pauseSpeech() {
                    if (synth.speaking && !synth.paused) {
                        synth.pause();
                        isPlaying = false;
                        isPaused = true;
                        updateButtonState();
                    }
                }

                function resumeSpeech() {
                    if (synth.paused) {
                        synth.resume();
                        isPlaying = true;
                        isPaused = false;
                        updateButtonState();
                    }
                }

                function stopSpeech() {
                    synth.cancel();
                    isPlaying = false;
                    isPaused = false;
                    updateButtonState();
                }

                function updateButtonState() {
                    if (isPlaying) {
                        playPauseBtn.innerHTML = '<i class="fas fa-pause"></i>';
                    } else {
                        playPauseBtn.innerHTML = '<i class="fas fa-play"></i>';
                    }
                }
            });
        </script>
