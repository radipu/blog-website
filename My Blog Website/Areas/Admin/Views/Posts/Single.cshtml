                                            {
                                                foreach (var group in reactionGroups)
                                                {
                                                    var (icon, color) = GetReactionInfo(group.Type);
                                                    <div class="reaction-badge position-relative">
                                                        <i class="fas @icon text-@color"></i>
                                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-@color">
                                                            @group.Count
                                                            <span class="visually-hidden">@group.Type reactions</span>
                                                        </span>
                                                    </div>
                                                }
                                            } *@
                                        </div>
                                        <div class="reaction-buttons mt-2 d-flex gap-1">
                                            @foreach (var reaction in new[] { ("like", "fa-thumbs-up", "primary"), 
                                                            ("love", "fa-heart", "danger"), 
                                                            ("care", "fa-hand-holding-heart", "success"), 
                                                            ("angry", "fa-angry", "warning"), 
                                                            ("support", "fa-hands-helping", "info") })
                                            {
                                                <a href="#" 
                                                   data-comment-id="@comment.CommentId" 
                                                   data-reaction-type="@reaction.Item1" 
                                                   class="btn btn-sm btn-outline-@reaction.Item3 reaction-button position-relative comment-react-link">
                                                    <span class="reaction-icon">
                                                        <i class="fas @reaction.Item2"></i>
                                                    </span>
                                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-@reaction.Item3">
                                                        @(comment.ReactionVotes?.Count(r => r.ReactionType == reaction.Item1) ?? 0)
                                                        <span class="visually-hidden">@reaction.Item1 reactions</span>
                                                    </span>
                                                </a>
                                            }
                                        </div>
                                        <button class="btn btn-link" onclick="showReplyForm(@comment.CommentId)">Reply</button>

                                        <!-- Reply Form (Hidden by Default) -->
                                        <div id="reply-form-@comment.CommentId" style="display:none;" class="mt-3">
                                            <form asp-action="AddComment" method="post">
                                                <input type="hidden" name="PostId" value="@Model.PostId" />
                                                <input type="hidden" name="ParentCommentId" value="@comment.CommentId" />
                                                <div class="form-group">
                                                    <label for="CommenterName">Your Name</label>
                                                    <input type="text" name="CommenterName" class="form-control" required />
                                                </div>
                                                <div class="form-group">
                                                    <label for="CommentText">Reply</label>
                                                    <textarea name="CommentText" class="form-control" rows="3" required></textarea>
                                                </div>
                                                <button type="submit" class="btn btn-primary">Submit Reply</button>
                                            </form>
                                        </div>

                                        <!-- Replies -->
                                        @if (comment.Replies != null && comment.Replies.Any())
                                        {
                                            <div class="replies ml-4 mt-3">
                                                @foreach (var reply in comment.Replies)
                                                {
                                                    <div class="comment mb-2">
                                                        <p><strong translate="no">@reply.CommenterName</strong> @(" on ") @reply.CommentDate.ToString("MMM dd, yyyy")</p>
                                                        <p>@reply.CommentText</p>
                                                        <div class="reactions d-flex gap-2 align-items-center mb-2">
                                                            @{
                                                                var replyReactionGroups = reply.ReactionVotes?
                                                                    .GroupBy(r => r.ReactionType)
                                                                    .Select(g => new { Type = g.Key, Count = g.Count() });
                                                            }
                                                            @* @if (replyReactionGroups != null)
                                                            {
                                                                foreach (var group in replyReactionGroups)
                                                                {
                                                                    var (icon, color) = GetReactionInfo(group.Type);
                                                                    <div class="reaction-badge position-relative">
                                                                        <i class="fas @icon text-@color"></i>
                                                                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-@color">
                                                                            @group.Count
                                                                            <span class="visually-hidden">@group.Type reactions</span>
                                                                        </span>
                                                                    </div>
                                                                }
                                                            } *@
                                                        </div>
                                                        <div class="reaction-buttons mt-2 d-flex gap-1">
                                                            @foreach (var reaction in new[] { ("like", "fa-thumbs-up", "primary"), 
                                                                                ("love", "fa-heart", "danger"), 
                                                                                ("care", "fa-hand-holding-heart", "success"), 
                                                                                ("angry", "fa-angry", "warning"), 
                                                                                ("support", "fa-hands-helping", "info") })
                                                            {
                                                                <a href="#" 
                                                                   data-comment-id="@reply.CommentId" 
                                                                   data-reaction-type="@reaction.Item1" 
                                                                   class="btn btn-sm btn-outline-@reaction.Item3 reaction-button position-relative comment-react-link">
                                                                    <span class="reaction-icon">
                                                                        <i class="fas @reaction.Item2"></i>
                                                                    </span>
                                                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-@reaction.Item3">
                                                                        @(reply.ReactionVotes?.Count(r => r.ReactionType == reaction.Item1) ?? 0)
                                                                        <span class="visually-hidden">@reaction.Item1 reactions</span>
                                                                    </span>
                                                                </a>
                                                            }
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <p>No comments yet. Be the first to comment!</p>
                            }
                        </div>

                        @functions {
                            private (string Icon, string Color) GetReactionInfo(string reactionType)
                            {
                                return reactionType switch
                                {
                                    "like" => ("fa-thumbs-up", "primary"),
                                    "love" => ("fa-heart", "danger"),
                                    "care" => ("fa-hand-holding-heart", "success"),
                                    "angry" => ("fa-angry", "warning"),
                                    "support" => ("fa-hands-helping", "info"),
                                    _ => ("fa-question", "secondary")
                                };
                            }
                        }

                        <div class="add-comment mt-5">
                            <h4>Add a Comment</h4>
                            <form asp-action="AddComment" method="post">
                                <input type="hidden" name="PostId" value="@Model.PostId" />
                                <div class="form-group">
                                    <label for="CommenterName">Your Name</label>
                                    <input type="text" name="CommenterName" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <label for="CommentText">Comment</label>
                                    <textarea name="CommentText" class="form-control" rows="5" required></textarea>
                                </div>
