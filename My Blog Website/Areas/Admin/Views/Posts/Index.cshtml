@using My_Blog_Website.Helpers
@model IEnumerable<My_Blog_Website.Areas.Admin.Models.Posts>

@{
    ViewData["Title"] = "Posts";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">All Posts</h1>



